[Unit]
Description=Ngrok startup process for Runtime
After=net_handler.service

[Service]
Type=simple
ExecStart=/home/pi/ngrok/ngrok start --all --config /home/pi/runtime/systemd/ngrok.yml
ExecReload=/bin/kill -SIGTERM $MAINPID
KillMode=process
IgnoreSIGPIPE=true
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
