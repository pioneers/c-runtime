[Unit]
Description=Net handler process for Runtime
BindsTo=dev_handler.service executor.service
After=shm_start.service
OnFailure=shm_stop.service

[Service]
Type=oneshot
User=pi
WorkingDirectory=/home/pi/c-runtime/net_handler
ExecStart=/home/pi/c-runtime/net_handler/net_handler
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
